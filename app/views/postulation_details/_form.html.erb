<%= form_for(@postulation_detail, :html => {:class => "form-signin"}) do |f| %>
	<p class="text-justify">Ingresa los idiomas que sabes</p>
	<div class="input_fields_wrap"><hr>
	<%= f.fields_for :languages do |builder| %>
		<%= render 'language_fields', f: builder %>
	<% end %><hr>
	<%= link_to_add_fields "Agregar idioma +", f, :languages %>
	</br>
	</br>
	<%= f.submit "Siguiente Paso", class: "add_field_button btn btn-lg btn-primary btn-block" %>
	</div>
<% end %>
